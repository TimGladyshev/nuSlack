<?xml version="1.0" encoding="UTF-8"?>;
<Configuration status="warn">
    <Properties>
        <Property name="basePath">var/logs/nuslack-logs</Property>
    </Properties>

    <Appenders>
        <RollingFile name="fileLogger"
                     fileName="${basePath}/nuslack-info.log"
                     filePattern="${basePath}/nuslack-info-%d{yyyy-MM-dd}.log">
            <PatternLayout>
                <pattern>
                    [%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n
                </pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true" />
            </Policies>
        </RollingFile>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout   pattern="[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n" />
        </Console>
        <appender>
        </appender>
    </Appenders>
    <Loggers>
        <Logger name="name1">
        </Logger>
        <Root level="level">
            <AppenderRef ref="name"/>
        </Root>
    </Loggers>
</Configuration>